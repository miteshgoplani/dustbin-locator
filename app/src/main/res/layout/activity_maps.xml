<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full_"
            android:background="@drawable/icon_64x64"
            android:visibility="visible"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dustbin Overflowing??"
            android:textColor="#000000"
            android:textStyle="bold"
            android:minWidth="50dp"
            android:textSize="12dp"
            android:id="@+id/t1"
            android:minLines="2"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_alignParentEnd="true"
        android:id="@+id/ll2"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/smelly_"
            android:background="@drawable/smelly"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dustbin Smelling??"
            android:textColor="#000000"
            android:textStyle="bold"
            android:minWidth="100dp"
            android:textSize="12dp"
            android:id="@+id/t2"
            android:minLines="2"
            android:layout_marginRight="5dp"/>
    </LinearLayout>

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.pulkitrathi.maps.MapsActivity" />
</RelativeLayout>